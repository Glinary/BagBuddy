                <div class="custom-color">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960"><path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"/></svg>
                <input type="color" id="form-choose-color" value="#d9d9d9" onchange="selectCustomColor(this)">
                </div>
            </div>
        </div>
        <div class="form-add-bag">
            <form id="addbagForm">
                <div class="first-page">
                    <div class="input">
                        <label for="bagname">Bag Name</label><br>
                        <input type="text" name="bagname" placeholder="enter your bag name" maxlength="10" required>
                    </div>
                    <div class="input">
                        <label for="bagname">Bag Weight</label><br>
                        <input type="number" name="weight" id="weight" placeholder="set maximum kg">
                        <input type="hidden" name="selectedColor" id="selectedColor" value="black">
                        <input type="hidden" name="userid" id="userid" value={{user}}>
                    </div>
                </div>
                <div class="second-page">
                    <div class="input">
                        <label for="bagdate">When will you use the bag?</label><br>
                        <input type="date" name="bagdate" id="date" value="today">
                    </div>
                    <div class="input">
                        <label for="bagdate">Bag Description</label><br>
                        <textarea id="bagdesc" name="bagdesc" maxlength="25" placeholder="add bag description">{{bags.bagDesc}}</textarea>
                    </div>
                    <button id="submit-btn" type="submit">Create</button>
                </div>
            </form>
            <button id="next-btn" class="cancel-btn" onclick="form_next()">Next</button>
            <button class="cancel-btn" id="form-cancel" onclick="form_cancel()">Cancel</button>
        </div>
    </div>
</section>